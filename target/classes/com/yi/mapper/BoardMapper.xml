	<select id="getListWithPaging" resultType="com.yi.domain.BoardVO">
  
	  select *
	  from board
	  where mid > 0 
	  order by mid 
	  limit #{startPage}, #{recordsPerPage}
  
	</select>

	<select id="getTotalCount" resultType="int">
		select count(*) from board where 
		
		<!-- <include refid="criteria"></include> --> 
		
		mid > 0
		
	</select>	
	
</mapper>