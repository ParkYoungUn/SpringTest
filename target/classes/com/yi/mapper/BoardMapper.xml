<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.yi.mapper.BoardMapper">

	<select id="getList" resultType="com.yi.domain.BoardVO">
	<![CDATA[
		select * from Board 
		]]>
	</select>

	<insert id="insert">
		insert into Board (name,age,address, cphone)
		values (#{name}, #{age}, #{address}, #{cphone})
	</insert>


	<select id="read" resultType="com.yi.domain.BoardVO">
		select * from Board where mid=#{mid}
	</select>
	
	<delete id="delete">
		delete from Board where mid=#{mid}
	</delete>

	<update id="update">
		update Board set name=#{mid}, address=#{address}, 
			age=#{age}, cphone=#{cphone}
		where mid=#{mid}
	
	</update>

